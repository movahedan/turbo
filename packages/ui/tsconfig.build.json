{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"rootDir": "..",
		"outDir": "./dist",
		"emitDeclarationOnly": false
	},
	"include": [
		"vite-entries.generated.json",
		"src/**/*.ts",
		"src/**/*.tsx",
		"../utils/src/**/*"
	],
	"exclude": [
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"../utils/src/**/*.test.ts",
		"../utils/src/**/*.test.tsx"
	]
}
