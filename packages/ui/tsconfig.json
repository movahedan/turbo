	"extends": "@repo/typescript-config/react-library.json",
	"compilerOptions": {
		"composite": true,

		// Target & Language Settings
		"module": "esnext",
		"lib": ["DOM", "ES2015"],
		"target": "ES2015",

		// Import Settings
		"baseUrl": "."
	},
	"include": [
		".",
